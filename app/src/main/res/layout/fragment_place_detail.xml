<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".PlaceDetailFragment">

    <TextView
        android:id="@+id/tv_place_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Oroma-Ekiti"
        android:textColor="@color/colorTextPlaces"
        android:textSize="24sp"
        android:fontFamily="@font/poppins"
        android:textStyle="normal"
        android:textFontWeight="600"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_layer_detail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:listitem="@layout/layer_detail_left_list" />

</LinearLayout>