<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="5dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="100">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="194dp"
        android:layout_weight="50"
        android:layout_marginStart="5dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="13dp"
        card_view:cardElevation="20dp"
        card_view:contentPadding="0dp"
        android:layout_marginEnd="22dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:layout_toEndOf="@id/layer_image_layout"
            android:background="@drawable/bg_list_item">

            <TextView
                android:id="@+id/tv_app_resistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="App Resistance"
                android:paddingEnd="10dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorTextTitle"
                android:fontFamily="@font/poppins" />

            <TextView
                android:id="@+id/tv_app_resistance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="220.09"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorGreen"
                android:fontFamily="@font/poppins"
                android:textFontWeight="600"
                android:layout_toEndOf="@id/tv_app_resistance"
                android:layout_alignBottom="@+id/tv_app_resistance"/>

            <TextView
                android:id="@+id/tv_thickness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="Thickness"
                android:paddingEnd="15dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorTextTitle"
                android:fontFamily="@font/poppins"
                android:layout_below="@id/tv_app_resistance"/>

            <TextView
                android:id="@+id/tv_thickness_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="2.01"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorGreen"
                android:fontFamily="@font/poppins"
                android:textFontWeight="600"
                android:layout_toEndOf="@id/tv_thickness"
                android:layout_alignBottom="@id/tv_thickness"/>

            <TextView
                android:id="@+id/tv_depth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="Depth"
                android:paddingEnd="15dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorTextTitle"
                android:fontFamily="@font/poppins"
                android:layout_below="@id/tv_thickness" />

            <TextView
                android:id="@+id/tv_depth_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="2.01"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorGreen"
                android:fontFamily="@font/poppins"
                android:textFontWeight="600"
                android:layout_toEndOf="@id/tv_depth"
                android:layout_alignBottom="@id/tv_depth"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="16dp"
                android:text="Description"
                android:paddingEnd="15dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorTextTitle"
                android:fontFamily="@font/poppins"
                android:layout_below="@id/tv_depth" />

            <TextView
                android:id="@+id/tv_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Top Soil"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorGreen"
                android:fontFamily="@font/poppins"
                android:textFontWeight="600"
                android:layout_toEndOf="@id/tv_description"
                android:layout_alignBottom="@id/tv_description" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="194dp"
        android:layout_weight="50"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_compare_data"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="13dp"
        card_view:cardElevation="20dp"
        card_view:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:layout_toEndOf="@id/layer_image_layout"
            android:background="@drawable/bg_list_item">

            <TextView
                android:id="@+id/tv_app_resistance_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="App Resistance"
                android:paddingEnd="10dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorTextTitle"
                android:fontFamily="@font/poppins" />

            <TextView
                android:id="@+id/tv_app_resistance_value_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="220.09"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorRed"
                android:fontFamily="@font/poppins"
                android:textFontWeight="600"
                android:layout_toEndOf="@id/tv_app_resistance_red"
                android:layout_alignBottom="@+id/tv_app_resistance_red"/>

            <TextView
                android:id="@+id/tv_thickness_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="Thickness"
                android:paddingEnd="15dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorTextTitle"
                android:fontFamily="@font/poppins"
                android:layout_below="@id/tv_app_resistance_red"/>

            <TextView
                android:id="@+id/tv_thickness_value_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="2.01"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorRed"
                android:fontFamily="@font/poppins"
                android:textFontWeight="600"
                android:layout_toEndOf="@id/tv_thickness_red"
                android:layout_alignBottom="@id/tv_thickness_red"/>

            <TextView
                android:id="@+id/tv_depth_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="Depth"
                android:paddingEnd="15dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorTextTitle"
                android:fontFamily="@font/poppins"
                android:layout_below="@id/tv_thickness_red" />

            <TextView
                android:id="@+id/tv_depth_value_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="2.01"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorRed"
                android:fontFamily="@font/poppins"
                android:textFontWeight="600"
                android:layout_toEndOf="@id/tv_depth_red"
                android:layout_alignBottom="@id/tv_depth_red"/>

            <TextView
                android:id="@+id/tv_description_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="16dp"
                android:text="Description"
                android:paddingEnd="15dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorTextTitle"
                android:fontFamily="@font/poppins"
                android:layout_below="@id/tv_depth_red" />

            <TextView
                android:id="@+id/tv_description_text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Top Soil"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorRed"
                android:fontFamily="@font/poppins"
                android:textFontWeight="600"
                android:layout_toEndOf="@id/tv_description_red"
                android:layout_alignBottom="@id/tv_description_red" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>