<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/colorWhite"
        tools:context=".ui.CompareFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Compare Data"
            android:textSize="23sp"
            android:textFontWeight="600"
            android:fontFamily="@font/poppins"
            android:textStyle="normal"
            android:textColor="@color/colorTextTitle"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="54dp"
            android:background="@drawable/bg_compare_data"
            android:weightSum="100">

            <TextView
                android:id="@+id/tv_default_layer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Oroma-Ekiti"
                android:textColor="@color/colorGreen"
                android:fontFamily="@font/poppins"
                android:textSize="20sp"
                android:textFontWeight="600"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_compare_layer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Oroma-Ekiti"
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:textFontWeight="600"
                android:gravity="center"/>
            
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_compare_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            tools:listitem="@layout/compare_list_item"/>
    </LinearLayout>
    </ScrollView>

</layout>